<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <%= pluralize @article.errors.count, 'error'%> prevented this article from saving.
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body, rows: 10, cols: 80 %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
